	<authorUrl>www.hepta.es</authorUrl>
	<version>2.5.0</version>
	<description>PLG_TAWEA_XML_DESCRIPTION</description>
	<files>
			<filename plugin="tawea">tawea.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_tawea.ini</language>
		<language tag="en-GB">en-GB.plg_tawea.sys.ini</language>
		<language tag="es-ES">es-ES.plg_tawea.ini</language>
		<language tag="es-ES">es-ES.plg_tawea.sys.ini</language>
	</languages>
	<config>
		<fields name="params" >
			<fieldset name="basic">
					<field name="whentoshow" type="radio" default="1" label="PLG_TAWEA_WHENTOSHOW_LBL" description="PLG_TAWEA_WHENTOSHOW_DSC">
						<option value="1">PLG_TAWEA_ALWAYS</option>
						<option value="2">PLG_TAWEA_ONFRONTPAGE</option>
					</field>
			</fieldset>
		</fields>
	</config>
</install>
